    private void insertbActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        
        try{
            Class.forName("java.sql.Driver");
            con=DriverManager.getConnection("jdbc:mysql://localhost/mymov","root","1234");
            st=con.createStatement();
            int in=Integer.parseInt(indextf.getText());
            //String in= indextf.getText();
            String mv= movtf.getText();
            String p1= path1tf.getText();
            String p2=path2tf.getText();
            

            boolean conditions=false;
        
             if (0<in && in<7)
             { 
                 conditions=true;
              
        }
             else if(conditions==false){
                JOptionPane.showMessageDialog( rootPane ,"Cannot insert.Please check movie index and available slot.It should be between 1 to 6.");
             }
            

          if(conditions==true){
            sq= "insert into movies values('"+Integer.toString(in)+"','"+mv+"','"+p1+"','"+p2+"');";
            int   x = st.executeUpdate(sq);
            //JOptionPane.showMessageDialog(rootPane,"Account created");
            insdisp1.setText("STATUS:Movie inserted successfully!Check movies tab for more.");

          }
        rs.close();st.close();con.close();
        }

    catch (Exception e) {
            JOptionPane.showMessageDialog(null, e.getMessage());
        }
    }                                       

