    private void jButton8ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:

        try{
            String nm= nametf.getText();
            String ph= phonetf.getText();
            String em= emailtf.getText();
            String us=uid.getText();
            String p1= new String(pd.getPassword());
            String p2= new String(cpd.getPassword());

            boolean conditions=false;
        
             if (nm.length()!=0 && ph.length()!=0 && em.length()!=0 && us.length()!=0 && p1.length()!=0 && p1.equals(p2))
             { 
                 conditions=true;
              
        }
             else if(conditions==false){
                JOptionPane.showMessageDialog( rootPane ,"Please enter/check all your details");
             }
            

          if(conditions==true){
            sq= "insert into user_details values('"+nm+"','"+ph+"','"+em+"','"+us+"','"+p1+"');";
            int   x = st.executeUpdate(sq);
            JOptionPane.showMessageDialog(rootPane,"Account created");
            backb.doClick();
            uid.setText(null);
            pd.setText(null);
             cpd.setText(null);
            nametf.setText(null);
             phonetf.setText(null);
              emailtf.setText(null);

          }}

    catch (Exception e) {
            JOptionPane.showMessageDialog(null, e.getMessage());
        }
}                                        

    private void jButton9ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:

        try{
            String us=uid1.getText();
            String p1= new String(pd1.getPassword());
            sq= "select * from user_details where userid='"+us+"' and password = '"+p1+"';" ;
            rs = st.executeQuery(sq);
            System.out.println(sq);
            rs.first();
            if(rs.getString(4).equals(us) && rs.getString(5).equals(p1))
            {
                 JOptionPane.showMessageDialog(rootPane,"Welcome");
                loginv=true;
                us_name=us;
                backb1.doClick();
            }
            else
                JOptionPane.showMessageDialog(rootPane,"Try Again!");

        } catch (Exception e) {
            JOptionPane.showMessageDialog(null,e.getMessage());
        }
}                                        

