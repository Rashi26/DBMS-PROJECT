    private void viewmovbActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        adminp.setSelectedIndex(2);
        
        DefaultTableModel tm1=(DefaultTableModel) jTable2.getModel();
        tm1.setRowCount(0);
try{
        Class.forName("java.sql.Driver");
        con=DriverManager.getConnection("jdbc:mysql://localhost/mymov","root","1234");
        st=con.createStatement();
        sq="select movno,moviename from movies order by movno;";
        rs=st.executeQuery(sq);
        while(rs.next()){
            int movin=rs.getInt("movno");
            String movname=rs.getString("moviename");
            
            Object ob[]={movin,movname};
            tm1.addRow(ob);

        }
        rs.close();st.close();con.close();
        }
        catch(Exception e){
            JOptionPane.showMessageDialog(null,e.getMessage());
        }
        
        
        
    }                                        

    private void usersbActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here3
        adminp.setSelectedIndex(3);
        DefaultTableModel tm2=(DefaultTableModel) jTable3.getModel();
        tm2.setRowCount(0);
try{
        Class.forName("java.sql.Driver");
        con=DriverManager.getConnection("jdbc:mysql://localhost/mymov","root","1234");
        st=con.createStatement();
        sq="select name,phone,emailid,userid from user_details ;";
        rs=st.executeQuery(sq);
        while(rs.next()){
            String namad=rs.getString("name");
            String phonead=rs.getString("phone");
            String emailad=rs.getString("emailid");
            String userad=rs.getString("userid");
            
            Object ob[]={namad,phonead,emailad,userad};
            tm2.addRow(ob);

        }
        rs.close();st.close();con.close();
        }
        catch(Exception e){
            JOptionPane.showMessageDialog(null,e.getMessage());
        }
        
        
    }                                      

    private void databActionPerformed(java.awt.event.ActionEvent evt) {                                      
        // TODO add your handling code here:
        adminp.setSelectedIndex(4);
        DefaultTableModel tm4=(DefaultTableModel) jTable4.getModel();
        tm4.setRowCount(0);
try{
        Class.forName("java.sql.Driver");
        con=DriverManager.getConnection("jdbc:mysql://localhost/mymov","root","1234");
        st=con.createStatement();
        sq="select * from main_data;";
        rs=st.executeQuery(sq);
        while(rs.next()){
            String user=rs.getString("muser");
            String mov=rs.getString("movie");
            String date=rs.getString("mdate");
            String timing=rs.getString("mtiming");
            String theatre=rs.getString("mtheatre");
            String seatn=rs.getString("mseatno");
            String cit=rs.getString("seatcount");
            Object ob[]={user,mov,theatre,seatn,date,timing,cit};
            tm4.addRow(ob);

        }
        rs.close();st.close();con.close();
        }
        catch(Exception e){
            JOptionPane.showMessageDialog(null,e.getMessage());
        }
    }                                     

