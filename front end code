    private void moviesfrWindowOpened(java.awt.event.WindowEvent evt) {                                      
 Calendar c= Calendar.getInstance();
int date,month,year;
date=c.get(Calendar.DATE);
month=c.get(Calendar.MONTH);
year=c.get(Calendar.YEAR);
String fulldate,fd2,fd3;
fulldate=""+date+"-"+month+"-"+year;
fd2=""+(date+1)+"-"+month+"-"+year;
fd3=""+(date+2)+"-"+month+"-"+year;
Object arr[]={fulldate,fd2,fd3};
 cbday.insertItemAt(fulldate,1);
 cbday.insertItemAt(fd2,2);
 cbday.insertItemAt(fd3,3);        
    }                                     

