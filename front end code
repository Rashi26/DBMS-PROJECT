    private void delbActionPerformed(java.awt.event.ActionEvent evt) {                                     
        // TODO add your handling code here:
         int indexv=Integer.parseInt(deltext.getText());
        //DefaultTableModel tm2=(DefaultTableModel) jTable3.getModel();
        //tm2.setRowCount(0);
        try{
            Class.forName("java.sql.Driver");
            con=DriverManager.getConnection("jdbc:mysql://localhost/mymov","root","1234");
            st=con.createStatement();
            sq="delete from movies where movno="+indexv+";";
            //rs=st.executeQuery(sq);
             PreparedStatement ptmt = con.prepareStatement(sq);
             int no=ptmt.executeUpdate();
             deldisp.setText("STATUS:Movie deleted succesfully! Check movies tab for available slots to add new movies.");
      //preparedStmt.setInt(1, 3);
            //rs.close();
            st.close();con.close();
        }
        catch(Exception e){
            JOptionPane.showMessageDialog(null,e.getMessage());
        }
    }                                    

