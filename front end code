    private void formWindowActivated(java.awt.event.WindowEvent evt) {                                     
Dimension dim=Toolkit.getDefaultToolkit().getScreenSize();
int w=this.getSize().width;
int h=this.getSize().height;
int x=(dim.width-w)/2;
int y=(dim.width-h)/2;


        Calendar c= Calendar.getInstance();
        datel1.setText(""+(c.get(Calendar.DATE))+" "+c.getDisplayName(Calendar.MONTH, Calendar.SHORT, Locale.ENGLISH ).toUpperCase());

        if(loginv==false)
{
    historyb.setEnabled(false);
    offersb.setEnabled(false);
    signoutb.setVisible(false);
   

}
if(loginv==true)
{
  historyb.setEnabled(true);
   offersb.setEnabled(true);
  signupb.setVisible(false);
  loginb.setVisible(false);
  slash.setVisible(false);
  signoutb.setVisible(true);
  adminb.setVisible(false);
  
}
      
getContentPane().setBackground(Color.black); //backgroundColor
homeb.setBackground(Color.black);
offersb.setBackground(Color.black);
historyb.setBackground(Color.black);
moviesb.setBackground(Color.black);
signoutb.setBackground(Color.black);
signupb.setBackground(Color.black);
loginb.setBackground(Color.black);
cbday.setBackground(Color.black);
backb4.setBackground(Color.black);
adminb.setBackground(Color.black);
try{
        Class.forName("java.sql.Driver");
        con=DriverManager.getConnection("jdbc:mysql://localhost/mymov","root","1234");
        st=con.createStatement();
        sq="select * from movies order by movno;";
        rs=st.executeQuery(sq);
        int i=0;
        while(rs.next()){
           movieindexv[i]=rs.getString("movno");
           moviearr[i] =rs.getString("moviename");
           path1arr[i]=rs.getString("imgpath1");
           path2arr[i]=rs.getString("imgpath2");
        i++;
        }
        rs.close();st.close();con.close();
        }
        catch(Exception e){
            JOptionPane.showMessageDialog(null,e.getMessage());
        }

Timer t=new Timer(2000,new ActionListener(){
    public void actionPerformed(ActionEvent evt){
        Random r=new Random();
        int i=r.nextInt(6);
        switch(i){
            case 1:TimerMovie.setIcon(new ImageIcon (path2arr[0]));
                break;
                case 2:TimerMovie.setIcon(new ImageIcon (path2arr[1]));
                     break;
                case 3:TimerMovie.setIcon(new ImageIcon (path2arr[2]));
         break;
                case 4:TimerMovie.setIcon(new ImageIcon (path2arr[3]));
     break;
                case 5:TimerMovie.setIcon(new ImageIcon (path2arr[4]));
     break;
                case 6:TimerMovie.setIcon(new ImageIcon (path2arr[5]));
        break;
        }
    
}});
t.start();  

    
    // TODO add your handling code here:
    }                                    

