seatsta.setText("");
totseats.setText(""); 


        Calendar c= Calendar.getInstance();
        if(datecountv==1)
    datel.setText(""+(c.get(Calendar.DATE))+" "+c.getDisplayName(Calendar.MONTH, Calendar.SHORT, Locale.ENGLISH ).toUpperCase());
else if(datecountv==2)
    datel.setText(""+(c.get(Calendar.DATE)+1)+" "+c.getDisplayName(Calendar.MONTH, Calendar.SHORT, Locale.ENGLISH ).toUpperCase());
else if(datecountv==3)
    datel.setText(""+(c.get(Calendar.DATE)+2)+" "+c.getDisplayName(Calendar.MONTH, Calendar.SHORT, Locale.ENGLISH ).toUpperCase());// TODO add your handling code here:
int date,month,year;
date=c.get(Calendar.DATE);
month=c.get(Calendar.MONTH);
year=c.get(Calendar.YEAR);
String d1,d2,d3;
d1=""+year+"-"+month+"-"+date;
d2=""+year+"-"+month+"-"+(date+1);
d3=""+year+"-"+month+"-"+(date+2);
        if (datecountv==1)
            datesel=d1;
 if (datecountv==2)
            datesel=d2;
 if (datecountv==3)
            datesel=d3;
System.out.println(moviev+","+datesel+","+timev+","+theatre_selv);
String seatbook="";
//DefaultTableModel tm=(DefaultTableModel) jTable4.getModel();
       // tm4.setRowCount(0);
try{
        Class.forName("java.sql.Driver");
        con=DriverManager.getConnection("jdbc:mysql://localhost/mymov","root","1234");
        st=con.createStatement();
        //sq="select mseatno from main_data where movie="+moviev+" "+";";
        sq="select mseatno from main_data where (movie='"+moviev+"'and mdate='"+datesel+"' and mtiming='"+timev+"'and mtheatre='"+theatre_selv+"');";
        rs=st.executeQuery(sq);
        //System.out.println(sq);
        while(rs.next()){
            
             seatbook=rs.getString("mseatno");
       //System.out.println(seatbook);
            String s=   seatbook;        
            int i;
            char ch;
            String w="";
            for(i=0;i<s.length();i++)
        {
            ch=s.charAt(i);
            if(ch!=' ')
             w=w+ch;
            else
            {
            System.out.println(w);
            if(w.equals("A1"))
                seat1.setBackground(Color.DARK_GRAY);
            if(w.equals("A2"))
                seat2.setBackground(Color.DARK_GRAY);
            if(w.equals("A3"))
                seat3.setBackground(Color.DARK_GRAY);
            if(w.equals("B1"))
                seat4.setBackground(Color.DARK_GRAY);
            if(w.equals("B2"))
                seat5.setBackground(Color.DARK_GRAY);
            if(w.equals("B3"))
                seat6.setBackground(Color.DARK_GRAY);
            if(w.equals("C1"))
                seat7.setBackground(Color.DARK_GRAY);
            if(w.equals("C2"))
                seat8.setBackground(Color.DARK_GRAY);
            if(w.equals("C3"))
                seat9.setBackground(Color.DARK_GRAY);
            w="";
            }}      

        }
        rs.close();st.close();con.close();
        }
        catch(Exception e){
            JOptionPane.showMessageDialog(null,e.getMessage());
        }

/*try{
        sq= "select * from main_data;";
        Class.forName("java.sql.Driver");
        con=DriverManager.getConnection("jdbc:mysql://localhost/mymov","root","1234");
        st=con.createStatement();
        rs=st.executeQuery(sq);
        }
        catch(Exception e){
            JOptionPane.showMessageDialog(null,e.getMessage());
        }*/
    }                                            

