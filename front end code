    private void historyfrWindowActivated(java.awt.event.WindowEvent evt) {                                          
DefaultTableModel tm=(DefaultTableModel) jTable1.getModel();
try{
        Class.forName("java.sql.Driver");
        con=DriverManager.getConnection("jdbc:mysql://localhost/mymov","root","1234");
        st=con.createStatement();
        sq="select * from main_data where muser='"+us_name+"';";
        rs=st.executeQuery(sq);
        while(rs.next()){
            String mov=rs.getString("movie");
            String date=rs.getString("mdate");
            String timing=rs.getString("mtiming");
            String theatre=rs.getString("mtheatre");
            String seatn=rs.getString("mseatno");
            String cit=rs.getString("seatcount");
            Object ob[]={mov,theatre,seatn,date,timing,cit};
            tm.addRow(ob);

        }
        rs.close();st.close();con.close();
        }
        catch(Exception e){
            JOptionPane.showMessageDialog(null,e.getMessage());
        }

backb3.setBackground(Color.black);
jTable1.setBackground(Color.black);

        // TODO add your handling code here:
    }                                         

